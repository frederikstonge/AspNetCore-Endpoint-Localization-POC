<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Example" />
    <Folder Include="Resources" />
    <Compile Update="Translations\Controller.Designer.cs">
      <DependentUpon>Controller.resx</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
    <Compile Update="Translations\Action.Designer.cs">
      <DependentUpon>Controller.resx</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
    <EmbeddedResource Update="Translations\Controller.resx">
      <LastGenOutput>Controller.Designer.cs</LastGenOutput>
      <Generator>PublicResXFileCodeGenerator</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Translations\Action.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Action.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
